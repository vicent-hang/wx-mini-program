/* pages/goodsInfo/goodsInfo.wxss */
.scrollarea {
    flex: 1;
    overflow: scroll;
    max-height: 90vh;
  }

.swiper-container {
    height: 40vh;
    width: 80%;
  }
  .swiper-card {
    height: 100%;
    width: 100%;
    position: relative;
    overflow: hidden;
    background-color: #eeeeee;
  }
  
  .swiper-card-img{
    height: 100%;
    width: 100%;
  }

  .goodsinfo-title{
      padding: 10rpx 0;
      background-color: white;
      width: 100%;
      height: 100%;
      margin: 20rpx 0;
  }

  .goodsinfo-title-price{
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 0 20rpx;
  }

  .goodsinfo-dsc{
      margin-top: 20rpx;
      background-color: white;
      width: 100%;
      text-align: center;
  }

  .van-tabbar {
    display: -webkit-flex;
    display: flex;
    justify-content: left;
    align-items: center;
    width: 100%;
    height: 50px;
    background-color: #fff;
}

.btn {
    background-color: rgb(253, 158, 15);
    color: white;
    border-radius: 50rpx;
}

.goods-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:end;
  box-sizing: border-box;
  padding: 15rpx;
  margin: 0;
}

.goods-count {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  box-sizing: border-box;
  padding: 15rpx;
  margin: 0;
}