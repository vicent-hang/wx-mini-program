/* pages/searchlist/searchlist.wxss */
.scrollarea {
	flex: 1;
	overflow: scroll;
	max-height: 100vh;
}

.searchlist-title {
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	align-items: center;
	height: 100rpx;
	background-color: white;
}

.searchlist-item {
	color: black;
}

.active {
	color: red;
}

.searchlist-content {
	width: 100%;
	margin-top: 4rpx;
	/* background-color: red; */
}

.searchlist-item {
	display: flex;
	flex-direction: row;
	align-items: inherit;
	justify-content: end;
	box-sizing: border-box;
	padding: 15rpx;
	background-color: #fff;
	margin-bottom: 12rpx;
}

.searchlist-notFound {
	height: 50vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.tap-price {
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
	align-items: center;
}

.tap-active {
	color: rgb(255, 81, 0);
}