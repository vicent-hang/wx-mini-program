/* pages/cart/cart.wxss */
.scrollarea {
    flex: 1;
    overflow: scroll;
    max-height: 80vh;
  }

  .cartlist{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 95%;
    padding: 0 20rpx;
  }

  .cartlist-card {
    width: 90%;
    margin: 20rpx;
  }

  .tabbar-bill {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 10vh;
    padding: 0 20rpx;
    position: fixed;
    bottom: 0rpx;
    background-color: white;
  }

  page {
    background-color: rgb(196, 196, 196);
  }

  .searchlist-content {
    width: 100%;
    margin-top: 4rpx;
    /* background-color: red; */
  }
  .searchlist-notFound {
    height: 50vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }