/* pages/user/user.wxss */

.uesr-title {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    width: 100%;
    /* background-color: aqua; */
    background-color: rgb(255, 233, 193);
    background-size: 100%;
    height: 15vh;
}

.uesr-title-btn{
    font-size: 30rpx;
}

.user-account {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    width: 100%;
    background-color: white;
    text-align: center;
}

.user-order{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    width: 95%;
    background-color: white;
    text-align: center;
    margin-top: 20rpx;
    border-radius: 20rpx;
    height: 150rpx;
}

.user-server {
    width: 95%;
    background-color: white;
    margin-top: 20rpx;
    border-radius: 20rpx;
    height: 100%;
    padding: 20rpx 0;
    overflow: hidden;
}

.user-server-title {
    padding: 0 40rpx;
    margin-bottom: 20rpx;
}
.user-server-content {
    margin-top: 20rpx;
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap; 
}

.user-server-item {
    padding: 20rpx 40rpx;
    text-align: center;
    flex: 1 1 30%; 
    box-sizing: border-box; 
}
